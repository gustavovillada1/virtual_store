<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <!-- Refer to https://docs.liquibase.com/change-types/community/create-table.html -->

    <changeSet id="33d4e9bc-7210-47c3-9617-c56ab7c0750d" author="gustavo.villada" failOnError="true">

        <createTable tableName="order_item">
            <column name="order_item_id" type="UUID">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="quantity" type="number" />
            <column name="order_id" type="UUID" >
                <constraints foreignKeyName="fk-order-item-orders" references="orders(order_id)" nullable="false" primaryKey="true"/>
            </column>
            <column name="item_id" type="UUID" >
                <constraints foreignKeyName="fk-order-item-item" references="item(item_id)" nullable="false" primaryKey="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>