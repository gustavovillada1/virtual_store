<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <!-- Refer to https://docs.liquibase.com/change-types/community/create-table.html -->

    <changeSet id="33d4e9bc-7210-47c3-9617-c56ab7c0751d" author="gustavo.villada" failOnError="true">

        <createTable tableName="users">
            <column name="user_id" type="UUID">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="email" type="varchar(255)" />
            <column name="password" type="varchar(255)" />
            <column name="address" type="varchar(255)" />
            <column name="phone" type="varchar(255)" />
            <column name="role_id" type="UUID" >
                <constraints nullable="false" references="role(role_id)" foreignKeyName="fk-user-role"/>
            </column>

        </createTable>
    </changeSet>
</databaseChangeLog>